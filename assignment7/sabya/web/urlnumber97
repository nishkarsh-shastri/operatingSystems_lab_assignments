                    google.load("books", "0");

                    $('#googlePreviewButton').on('click', function() {
                        var viewer = new google.books.DefaultViewer(document.getElementById('viewerCanvas'));
                        viewer.load('ISBN:' + $('#googlePreviewIsbn').val());
                    });

                                        var isbns = ['9781439895832','9781439895849'];
                    var isbn;

                    function initialize() {
                        if(typeof isbns[0] !== 'undefined') {
                            isbn = isbns.shift();
                        } else {
                            return false;
                        }

                        var viewer = new google.books.DefaultViewer(document.getElementById('viewerCanvas'));
                        viewer.load('ISBN:' + isbn, initialize, successfulInitialization);
                    }


                    function successfulInitialization(){
                        $('#googlePreviewIsbn').val(isbn);
                        $('#googlePreviewButton').show();
                    }

                    google.setOnLoadCallback(initialize);

